{
  "name": "eslint-config-bambi",
  "version": "1.3.0",
  "description": "Shared ESLint configs for Node, Web, React Native, and Expo projects",
  "main": "default.js",
  "scripts": {
    "lint": "eslint .",
    "test": "jest"
  },
  "keywords": [
    "eslint-config",
    "expo",
    "bam",
    "react-native"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bamlab/bambi.git"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/*-test.js"
    ]
  },
  "eslintIgnore": [
    "/__tests__/fixtures/*"
  ],
  "author": "tychota <tychota@users.noreply.github.com>",
  "bugs": {
    "url": "https://github.com/bamlab/bambi/issues"
  },
  "homepage": "https://github.com/bamlab/bambi#readme",
  "dependencies": {
    "babel-eslint": "^8.1.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.47.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-pocket-fluff": "^1.2.2",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.8.2"
  },
  "devDependencies": {
    "@expo/spawn-async": "^1.3.0",
    "eslint": "^4.14.0",
    "jest": "^22.0.4",
    "prettier": "^1.9.2"
  },
  "peerDependencies": {
    "eslint": "^4.11.0",
    "prettier": "^1.8.2"
  },
  "license": "MIT",
  "private": false
}
